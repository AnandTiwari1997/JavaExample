package com.example.basics;

public class Operators {
	
	public Object add(Object A, Object B) {
		
		if(A instanceof Integer && B instanceof Integer) {
			return (Integer) A + (Integer) B;
		} else if(A instanceof Character && B instanceof Character) {
			return (Character) A + (Character) B;
        } else if(A instanceof String && B instanceof String) {
        	return (String) A + (String) B;
        } else if(A instanceof Float && B instanceof Float) {
        	return (Float) A + (Float) B;
        } else if(A instanceof Double && B instanceof Double) {
        	return (Double) A + (Double) B;
        } else {
            return "Unknown data Type or Cant Add two different Data Type (Data Type Mismatch)";
        }
		
	}
	
	
	public static void main(String[] args) {
		
		Operators operators = new Operators();
		System.out.println(operators.add(40, 20));
		
	}

}
